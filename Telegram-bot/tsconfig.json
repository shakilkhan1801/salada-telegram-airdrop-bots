{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/services/*": ["src/services/*"],
      "@/security/*": ["src/security/*"],
      "@/storage/*": ["src/storage/*"],
      "@/core/*": ["src/core/*"],
      "@/utils/*": ["src/utils/*"],
      "@/shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/admin/frontend/**/*",
    "src/backup/**/*",
    "src/services/telegram-webhook-optimizer.service.ts",
    "src/scripts/change-admin-password.ts",
    "src/scripts/init-admin.ts"
  ]
}